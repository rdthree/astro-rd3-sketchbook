---
// other imports and frontmatter
import Navigation from "../components/Navigation.astro";
import '../styles/main.css';

// Destructure the title prop, providing a default value if not specified
const { title = "Default Title" } = Astro.props;
---

<!-- Layout.astro: Main layout component for the site --><!-- This component provides a consistent structure for all pages --><!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Favicon handling -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <!-- Other meta tags -->
    <!-- stylesheets -->
    <!-- Icon Library (Optional) -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link
      rel="stylesheet"
      href="https://unpkg.com/@picocss/pico@latest/css/pico.min.css"
    />
    <!-- custom stylesheet -->
    <!-- Other head content -->
    <title>{title}</title>
  </head>
  <body>
    <header>
      <!-- header stuff whatever -->
    </header>
    <div class="layout-grid">
      <Navigation />
      <main class="main-content">
        <!-- Slot for page-specific content -->
      <h1>{title}</h1>
        <slot />
      </main>
    </div>
  </body>
</html>
