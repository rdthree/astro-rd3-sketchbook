<!-- Layout.astro: Main layout component for the site -->
<!-- This component provides a consistent structure for all pages -->
---
import '@picocss/pico/css/pico.min.css';

// Destructure the title prop, providing a default value if not specified
const { title = 'Default Title' } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
  </head>
  <body>
    <header>
      <h1>{title}</h1>
    </header>
    <main>
      <!-- Slot for page-specific content -->
      <slot />
    </main>
  </body>
</html>