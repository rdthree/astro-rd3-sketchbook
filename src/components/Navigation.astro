---
// Navigation.astro: Reusable navigation component for the site
// This component generates a list of navigation links

// Define the navigation links
const links = [
  { href: '/', text: 'Home' },
  { href: '/about', text: 'About' },
];
---

<nav>
  <ul>
    {/* Map through the links array to generate list items */}
    {links.map(link => (
      <li><a href={link.href}>{link.text}</a></li>
    ))}
  </ul>
</nav>
