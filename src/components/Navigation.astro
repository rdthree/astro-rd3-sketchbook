---
// Navigation.astro: Reusable navigation component for the site
// This component generates a list of navigation links

// Define the navigation links
const links = [
  { href: '/', text: 'Home' },
  { href: '/about', text: 'About' },
];
---

<nav class="vertical-nav">
  <button class="expand-button"></button>
  <ul>
    {links.map(link => (
      <li><a href={link.href}><i class="fas fa-link"></i><span class="entry-name">{link.text}</span></a></li>
    ))}
  </ul>
</nav>

<script>
  const nav = document.querySelector('.vertical-nav');
  const expandButton = document.querySelector('.expand-button');
  if (nav && expandButton) {
    expandButton.addEventListener('click', () => nav.classList.toggle('expanded'));
  }
</script>
</script>

